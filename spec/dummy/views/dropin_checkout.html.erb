<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <script src='braintree.js'></script>
  <script src='jquery-2.1.0.js'></script>
</head>
<body>
  <div id='client-token' data-token='<%= @token %>'></div>

  <form action='/credit_cards' method='post'>
    <div id='checkout'></div>
    <input id='submit' type='submit'>
  </div>

  <script>
    jQuery(function() {
      var token = $('#client-token').data('token');
      braintree.setup(token, 'dropin', {container: 'checkout'});
    });
  </script>
</body>
</html>
